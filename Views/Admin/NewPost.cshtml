@model Blog.ViewModel.PostViewModel

@{
    Layout = "_LayoutAdminLte";
}

<div class="content-wrapper">
  <div class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <form method="post" asp-action="savepost" asp-controller="admin" enctype="multipart/form-data">
            <div class="form-group">
              <label asp-for="Title">Title</label>
              <input asp-for="Title" type="text" class="form-control" id="inputEmail4">
            </div>
            <div class="form-group">
              <label asp-for="Resume">Resume</label>
              <input asp-for="Resume" type="text" class="form-control" id="inputAddress">
            </div>
            <div class="form-group">
              <label asp-for="Content">Content</label>
              <textarea asp-for="Content" class="form-control" id="inputAddress2"></textarea>
            </div>
            <div class="form-row">
              <div class="form-group col-md-6">
                <label asp-for="Image">Image</label>
                <input asp-for="Image" type="file" class="form-control" id="inputCity">
              </div>
            </div>
            <button type="submit" class="btn btn-primary">Save Post</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>